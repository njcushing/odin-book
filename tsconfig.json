{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
        "@/*": ["./packages/frontend/src/*", "./packages/backend/src/*"],
        "@shared/*": ["./packages/shared/src/*"],
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "packages/frontend/src",
    "packages/frontend/vite.config.js",
    "packages/frontend/tests.config.js",
    "packages/backend/src",
    "packages/backend/vite.config.js",
    "packages/backend/tests.config.js",
    "packages/shared/src",
    "packages/shared/vite.config.js",
    "packages/shared/tests.config.js"
  ]
}