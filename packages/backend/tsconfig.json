{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "../",
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["../shared/src/*"],
    },
    "noEmit": false,
  },
  "tsc-alias": {
    "verbose": false,
    "resolveFullPaths": true,
    "fileExtensions": {
      "inputGlob": "{js,jsx,mjs}",
      "outputCheck": ["js", "json", "jsx", "mjs"]
    }
  },
  "include": ["../backend/src", "../shared/src"],
  "exclude": ["**/*.test.*"]
}