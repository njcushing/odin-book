{
  "name": "odin-book",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start:front": "vite ./packages/frontend",
    "build:front": "vite build ./packages/frontend",
    "test:front": "vitest watch --root ./packages/frontend",
    "coverage:front": "vitest --root ./packages/frontend --coverage",
    "start:back": "node ./packages/backend/src/bin/www.ts",
    "start:back:dev": "nodemon ./packages/backend/src/bin/www.ts",
    "test:back": "vitest watch --root ./packages/backend",
    "coverage:back": "vitest run --root ./packages/backend --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
