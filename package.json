    "passport-jwt": "^4.0.1",
    "prop-types": "^15.8.1",
    "pubsub-js": "^1.9.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hooks": "^1.0.1",
    "react-outside-click-handler": "^1.3.0",
    "react-refresh": "^0.14.0",
    "react-router-dom": "^6.21.3",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1",
    "vite": "^5.0.12"
